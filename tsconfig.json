{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext", 
    "target": "es2020", 
    "moduleResolution": "node"
  },
  "exclude": [
    "src/**/*.mjs",
    "node_modules/",
    "dist/",
    "tests/vika-orm-test.ts",
    "tests/lark.ts"
