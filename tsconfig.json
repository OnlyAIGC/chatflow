    "src/*.ts",
    "src/plugins/*.ts",
    "src/plugins/*.cjs",
    "example/*.ts",
    ".eslintrc.cjs", 
    "tests/*.ts"  
, "src/proxy/weixin-chatbot-proxy.ts"  ]
}